{
  "compilerOptions": {
    /* Шляхи компіляції */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Середовище виконання */
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": ["node"],

    /* Генерація додаткових файлів */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Перевірки */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* JSX для React */
    "jsx": "react-jsx",

    /* Інше */
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Alias для імпортів */
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],

  /* Конфіг для ts-node */
  // "ts-node": {
  //   "swc": true
  // }
}
